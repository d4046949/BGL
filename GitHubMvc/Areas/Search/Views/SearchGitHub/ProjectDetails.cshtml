@model GitHubMvc.Areas.Search.Models.UserProfileViewModel

<div id="result-details-pane" class="d-flex flex-row w-100">
    <div class="w-25 flex-fill justify-content-start overflow-auto text-white bg-dark-blue">
    
        <div class="p-2">
            <h3>User Overview</h3>
            <h4>@Model.FullName - @Model.Location</h4>
            <img src="@Model.AvatarPath"  class="img-fluid"/>
        </div>
    </div>

    <div class="flex-fill w-75 justify-content-start overflow-auto">
        
        <div class="d-flex flex-row w-100 bg-dark-blue text-white pb-2">
            <h3>Project Listings</h3>
        </div>
        <div class="p-3">
            @Html.DisplayFor(x => x.Projects)
        </div>
    </div>
</div>